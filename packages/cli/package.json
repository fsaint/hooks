{
  "name": "@hooks/cli",
  "version": "0.1.0",
  "private": true,
  "description": "CLI tool for the Hooks monitoring platform",
  "type": "module",
  "bin": {
    "hooks-cli": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hooks/shared": "*",
    "commander": "^12.0.0",
    "yaml": "^2.3.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "vitest": "^1.2.0"
  }
}
