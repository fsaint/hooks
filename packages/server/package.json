{
  "name": "@hooks/server",
  "version": "0.1.0",
  "private": true,
  "description": "Backend API server for the Hooks platform",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hooks/shared": "*",
    "fastify": "^4.26.0",
    "@fastify/cors": "^9.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/websocket": "^10.0.0",
    "fastify-plugin": "^4.5.0",
    "drizzle-orm": "^0.29.0",
    "postgres": "^3.4.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.0",
    "zod": "^3.22.0",
    "ioredis": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "drizzle-kit": "^0.20.0",
    "tsx": "^4.7.0",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
